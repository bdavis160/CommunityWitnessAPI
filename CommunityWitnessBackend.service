[Unit]
Description=The Community Witness Backend REST API
Requires=postgresql.service
After=postgresql.service network.target

[Service]
Type=simple
Environment=MAX_HEAP_SIZE=1G
Environment=BASE_URI=http://0.0.0.0
ExecStart=/usr/bin/java -server -Xmx${MAX_HEAP_SIZE} -jar /usr/local/lib/CommunityWitnessBackend/Backend.jar ${BASE_URI}
Restart=on-failure

[Install]
WantedBy=multi-user.target
